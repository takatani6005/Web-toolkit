    "policies": {
      "minimal": {
        "allowedTags": ["p", "br", "strong", "em"],
        "allowedAttributes": ["class"],
        "allowedProtocols": ["https:"],
        "description": "Minimal policy for basic text formatting"
      },
      "basic": {
        "allowedTags": ["p", "br", "strong", "em", "u", "i", "b", "span", "div", "h1", "h2", "h3"],
        "allowedAttributes": ["class", "id", "title"],
        "allowedProtocols": ["http:", "https:", "mailto:"],
        "description": "Basic policy for simple content"
      },
      "standard": {
        "allowedTags": ["p", "br", "strong", "em", "u", "i", "b", "span", "div", "h1", "h2", "h3", "h4", "h5", "h6", "ul", "ol", "li", "a", "img"],
        "allowedAttributes": ["class", "id", "title", "alt", "href", "src", "width", "height", "target", "rel"],
        "allowedProtocols": ["http:", "https:", "mailto:", "tel:"],
        "description": "Standard policy for rich content"
      },
      "extended": {
        "allowedTags": ["p", "br", "strong", "em", "u", "i", "b", "span", "div", "h1", "h2", "h3", "h4", "h5", "h6", "ul", "ol", "li", "a", "img", "table", "thead", "tbody", "tr", "td", "th", "blockquote", "code", "pre"],

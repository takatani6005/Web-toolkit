        "allowedProtocols": ["http:", "https:", "mailto:", "ftp:", "tel:", "sms:"],
        "description": "Extended policy for full-featured content"
      }
    },
    "xssPatterns": {
      "high_risk": [
        "/<script[\\s\\S]*?<\\/script>/gi",
        "/javascript:/gi",
        "/vbscript:/gi",
        "/on\\w+\\s*=/gi",
        "/expression\\s*\\(/gi"
      ],
      "medium_risk": [
        "/<iframe[\\s\\S]*?>/gi",
        "/<object[\\s\\S]*?>/gi",
        "/<embed[\\s\\S]*?>/gi",
        "/<link[\\s\\S]*?>/gi",
        "/url\\s*\\(/gi"
      ],
      "low_risk": [
        "/<meta[\\s\\S]*?>/gi",
        "/&#x?[0-9a-f]+;?/gi",
        "/<style[\\s\\S]*?<\\/style>/gi"
      ]
    },
    "cspTemplates": {
      "strict": {
        "default-src": ["'self'"],
        "script-src": ["'self'"],
        "style-src": ["'self'"],
        "img-src": ["'self'", "data:"],
        "font-src": ["'self'"],
        "connect-src": ["'self'"],
        "media-src": ["'none'"],
        "object-src": ["'none'"],
        "child-src": ["'none'"],
        "frame-src": ["'none'"],
        "worker-src": ["'none'"],
        "frame-ancestors": ["'none'"],
        "form-action": ["'self'"],
        "base-uri": ["'self'"],
        "manifest-src": ["'self'"]
      },
      "moderate": {
        "default-src": ["'self'"],
        "script-src": ["'self'", "'unsafe-inline'"],
        "style-src": ["'self'", "'unsafe-inline'"],
        "img-src": ["'self'", "data:", "https:"],
        "font-src": ["'self'", "https:"],
        "connect-src": ["'self'"],
        "media-src": ["'self'"],
        "object-src": ["'none'"],
        "child-src": ["'self'"],
        "frame-src": ["'self'"],
        "worker-src": ["'self'"],
        "frame-ancestors": ["'self'"],
        "form-action": ["'self'"],
        "base-uri": ["'self'"]
      },
      "permissive": {
        "default-src": ["'self'", "'unsafe-inline'", "'unsafe-eval'"],
        "script-src": ["'self'", "'unsafe-inline'", "'unsafe-eval'"],
        "style-src": ["'self'", "'unsafe-inline'"],
        "img-src": ["*", "data:", "blob:"],
        "font-src": ["*"],
        "connect-src": ["*"],
        "media-src": ["*"],
        "object-src": ["*"],
        "child-src": ["*"],
        "frame-src": ["*"],
        "worker-src": ["*"]
      }

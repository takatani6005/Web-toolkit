    "dangerousElements": {
      "scripts": ["script", "noscript"],
      "objects": ["object", "embed", "applet"],
      "frames": ["iframe", "frame", "frameset", "noframes"],
      "forms": ["form", "input", "textarea", "select", "option", "button", "fieldset", "legend", "label", "optgroup"],
      "meta": ["meta", "link", "base", "title", "head", "html", "body"],
      "style": ["style"],
      "deprecated": ["font", "center", "marquee", "blink", "nobr", "plaintext", "xmp", "listing"]
    },
    "safeSubsets": {
      "textOnly": {
        "tags": ["p", "br", "strong", "em", "i", "b", "u"],
        "attributes": [],
        "description": "Only basic text formatting"
      },
      "basicFormatting": {
        "tags": ["p", "br", "strong", "em", "i", "b", "u", "span", "div", "h1", "h2", "h3"],
        "attributes": ["class", "id"],
        "description": "Basic formatting with headers and containers"
      },
      "listAndLinks": {
        "tags": ["p", "br", "strong", "em", "i", "b", "u", "span", "div", "h1", "h2", "h3", "ul", "ol", "li", "a"],
        "attributes": ["class", "id", "href", "target", "rel"],
        "description": "Text formatting plus lists and links"
      },
      "mediaContent": {
        "tags": ["p", "br", "strong", "em", "i", "b", "u", "span", "div", "h1", "h2", "h3", "ul", "ol", "li", "a", "img"],
        "attributes": ["class", "id", "href", "target", "rel", "src", "alt", "width", "height"],
        "description": "Rich content with images"
      }
    },
    "encoding": {
      "htmlEntities": {
        "&": "&amp;",
        "<": "&lt;",
        ">": "&gt;",
        "\"": "&quot;",
        "'": "&#x27;",
        "/": "&#x2F;",
        "`": "&#x60;",
        "=": "&#x3D;"
      },
      "jsEscaping": {
        "\"": "\\\"",
        "'": "\\'",
        "\\": "\\\\",
        "\n": "\\n",
        "\r": "\\r",
        "\t": "\\t",
        "\b": "\\b",
        "\f": "\\f",
        "\v": "\\v",
        "\0": "\\0"
      },
      "cssEscaping": {
        "method": "unicode",
        "allowedChars": "a-zA-Z0-9\\-_"
      },
      "urlEncoding": {
        "reservedChars": [":/?#[]@", "!"onafterprint",
        "onbeforeprint", "onbeforeunload", "onhashchange", "onmessage'()*+,;=", " "],
        "method": "percent"
      }
    },
    "validation": {
      "maxContentLength": 1000000,
      "maxTagDepth": 50,
      "maxAttributes": 20,
      "allowedCharsets": ["UTF-8", "ISO-8859-1"],
      "blockedMimeTypes": ["text/javascript", "application/javascript", "text/vbscript"]
    }
